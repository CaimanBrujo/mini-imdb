<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <header class="navbar">
        <a href="/">Home</a>
        <a href="/genres">Genres</a>
        <a href="/movies">Movies</a>
      </header>

      <h1><%= title %></h1>

      <!-- ADMIN PASSWORD (one for all forms) -->
      <div class="admin-password">
        <label for="adminPassword">Admin Password</label>
        <input
          type="password"
          id="adminPassword"
          name="adminPassword"
          required
        />
      </div>

      <!-- CREATE & EDIT FORM -->
      <form
        method="POST"
        action="<%= action %>"
        onsubmit="return appendAdminPassword(this)"
      >
        <label for="name">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          value="<%= genre?.name || '' %>"
          required
        />

        <label for="description">Description</label>
        <textarea id="description" name="description" rows="3">
<%= genre?.description || '' %></textarea
        >

        <input type="hidden" name="adminPassword" />

        <button type="submit" class="btn"><%= buttonText %></button>
      </form>

      <!-- DELETE FORM -->
      <% if (genre?.id) { %>
      <form
        method="POST"
        action="/genres/<%= genre.id %>/delete"
        onsubmit="return appendAdminPassword(this)"
        style="margin-top: 1em"
      >
        <input type="hidden" name="adminPassword" />
        <button
          type="submit"
          class="btn danger"
          onclick="return confirm('Are you sure you want to delete this genre?')"
        >
          üóëÔ∏è Delete Genre
        </button>
      </form>
      <% } %>

      <p><a href="/genres" class="btn">‚Üê Back to Genres</a></p>
    </div>

    <script>
      function appendAdminPassword(form) {
        const adminPassword = document.getElementById("adminPassword").value;
        if (!adminPassword) {
          alert("Please enter the admin password.");
          return false; // Cancel submit
        }
        form.querySelector('input[name="adminPassword"]').value = adminPassword;
        return true; // Allow submit
      }
    </script>
  </body>
</html>
