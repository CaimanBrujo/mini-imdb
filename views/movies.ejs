      <ul class="list">
        <% movies.forEach(movie => { %>
        <li class="list-item">
          <div>
            <strong><%= movie.title %></strong><br />
            <small><%= movie.release_year %> â€¢ <%= movie.genre_name %></small>
          </div>
          <div>
